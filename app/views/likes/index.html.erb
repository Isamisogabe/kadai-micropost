<div class="text-center">
  <div class="jumbotron">
    <p>お気に入りリスト</p>
  </div>
</div>
<ul class="media-list">
  <% likes.each do |like| %>
    <li class='media'>
      <div class='media-left'>
        <img class="media-object img-rounded" src="<%= gravatar_url(like.user, { size: 50 }) %>" alt="" >
        
      </div>
      <div class="media-body">
        <%= link_to like.user.name, user_path(like.user) %> <span class="text-muted"> posted at <%= like.created_at %></span>
      </div>
      <div>
        <p><%= like.content %></p>
      </div>
      <div>
        <%= render 'like_relatinships/like_button', micropost: @micropost %>
      </div>
    </li>
  <% end %>
  <%= paginate likes %>
</ul>
